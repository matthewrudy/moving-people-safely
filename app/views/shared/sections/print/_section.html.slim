- relevant = assessment.section_relevant?(questions)

tr.top-dotted
  td.column-30-percent
    .title
      div class="#{ 'strong-text' if relevant }"
        = location_text(t("print.section.titles.#{section}"), assessment.location)
  td.column-20-percent.indented
    div class="#{ 'strong-text' if relevant }"
      = relevant ? 'Yes' : 'No'
  td.column-50-percent
    | &nbsp;
