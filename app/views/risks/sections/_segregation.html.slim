- questions = %w[csra rule_45 vulnerable_prisoner]

- unless views == 'escort'
  = render partial: "shared/sections/#{views}/section",
    locals: { assessment: assessment, path: path, section: section, questions: questions }

= render partial: "shared/sections/#{views}/question",
  locals: { alternance: 'even', assessment: assessment, section: section, question: 'csra',
            value: assessment.csra, details: nil }

= render partial: "shared/sections/#{views}/question",
  locals: { alternance: 'odd', assessment: assessment, section: section, question: 'rule_45',
            value: assessment.rule_45, details: nil }

= render partial: "shared/sections/#{views}/question",
  locals: { alternance: 'even', assessment: assessment, section: section, question: 'vulnerable_prisoner',
            value: assessment.vulnerable_prisoner, details: assessment.vulnerable_prisoner_details }
